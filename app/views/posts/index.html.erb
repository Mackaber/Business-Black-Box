<h1>Listing posts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Category</th>
    <th>Voteup</th>
    <th>Votedown</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.user %></td>
    <td><%= post.category %></td>
    <td><%= post.voteup %></td>
    <td><%= post.votedown %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
